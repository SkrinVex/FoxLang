void checkParity() {
    // Используем оператор остатка %
    int rem = arg_val % 2;
    if (rem == 0) {
        print("Number " + arg_val + " is EVEN (Chetnoe).");
    } else {
        print("Number " + arg_val + " is ODD (Nechetnoe).");
    }
}